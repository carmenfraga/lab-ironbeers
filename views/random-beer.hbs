<div class="random-beer-container">
    <div class="row">

        {{#each random}}
        <div class="col-md-2">
            <img src="{{image_url}}" class="random-img" alt="{{name}} {{tagline}}">

        </div>
        <div class="col-md-10">
            <div class="random-body">
                <h5 class="random-name">{{name}}</h5>
                <p class="random-tagline">{{tagline}}</p>
                <p class="random-text">{{description}}</p>
                <h6>Food pairing</h6>
                <ul>
                    {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p> <b>Brewers Tips:</b> {{brewers_tips}}</p>

            </div>

        </div>
        {{/each}}
    </div>










</div>


</div>